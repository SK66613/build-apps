{
  "id": "calendar_booking",
  "type": "htmlEmbed",
  "title": "Календарь: запись",
  "defaults": {
    "title": "Записаться на консультацию",
    "view": "slots",                    // slots | month
    "accent": "var(--accent)",          // цвет акцента (можно hex)
    "chipBg": "var(--surface2)",
    "chipText": "var(--text)",
    "radius": 10,                       // скругление «чипов»
    "gap": 8,                           // расстояние между «чипами»
    "show_hold": true,                  // показывать кнопку «Держать слот»
    "allowedDurations": [30,60,90],     // какие длительности показывать в селекте
    "defaultDuration": 60,              // какая выбранa по умолчанию
    "show_contact": true,
    "contact_placeholder": "Ваш телефон/ник"
  },
  "assets": { "css": ["style.css"], "js": ["runtime.js"] }
}
